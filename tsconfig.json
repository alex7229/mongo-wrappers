{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": ["node", "jest"],
    "rootDir": "src",
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
